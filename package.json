{
  "name": "whatsapp-faq-bot",
  "version": "1.0.0",
  "description": "Simple WhatsApp FAQ bot for Nigerian businesses",
  "main": "dist/bot.js",
  "type": "module",
  "scripts": {
    "start": "tsx src/bot.ts",
    "start:api": "tsx src/api-server.ts",
    "start:all": "START_API_SERVER=true tsx src/bot.ts",
    "dev": "START_API_SERVER=true tsx watch src/bot.ts",
    "dev:api": "tsx watch src/api-server.ts",
    "dev:bot-only": "tsx watch src/bot.ts",
    "build": "tsc",
    "test": "echo \"No tests yet\" && exit 0",
    "test:mongodb": "tsx src/scripts/test-mongodb.ts",
    "seed:client": "tsx src/scripts/seed-client.ts",
    "seed:admin": "tsx src/scripts/seed-admin.ts",
    "check:expired": "tsx src/scripts/check-expired.ts",
    "check:resources": "tsx src/scripts/check-resources.ts"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "faq",
    "nigeria",
    "auto-reply"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "7.0.0-rc.9",
    "bcrypt": "^5.1.1",
    "chalk": "^5.6.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.1.0",
    "pino": "^9.5.0",
    "qrcode-terminal": "^0.12.0",
    "tsx": "^4.21.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mongodb": "^4.0.6",
    "@types/node": "^25.1.0",
    "@types/qrcode-terminal": "^0.12.2",
    "typescript": "^5.9.3"
  }
}
